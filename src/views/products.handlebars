<div id="contenido">
    <div class="go_to_cart">
        <a href="http://localhost:8080/carts/65164a3eb27a0697f1966a65"><button type="button" class="btn btn-warning">Ir a mi carrito</button></a>
    </div>
    {{#each products}}
    <div class="card" style="width: 18rem;">
        <div class="image-container">
            <img src="/static/thumbnails/{{this.thumbnail}}" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            {{this.category}}
            <h6>U$D: {{this.price}}</h6>
            <p class="card-text">{{this.description}}</p>
        </div>
        <div class="purchase_botton">
            <button type="button" class="btn btn-warning" id="purchase" data-productid="{{this._id}}">Add to Cart
                +</button>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Stock: {{this.stock}} - Status: {{this.status}} </li>
            <li class="list-group-item">Code: {{this.code}}</li>
            <li class="list-group-item">ID: {{this._id}}</li>
        </ul>
    </div>
    {{/each}}
</div>
<footer>
    <div class="nav_buttons">
        {{#if prevLink}}
        <a href="{{prevLink}}"><button type="button" class="btn btn-warning">Pagina Anterior</button></a>
        {{/if}}
        {{#if nextLink}}
        <a href="{{nextLink}}"><button type="button" class="btn btn-warning">Pagina Siguiente</button></a>
        {{/if}}
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/products.js"></script>